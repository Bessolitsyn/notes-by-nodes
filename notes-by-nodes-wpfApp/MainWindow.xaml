<Window x:Class="notes_by_nodes_wpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:notes_by_nodes_wpfApp"      
        xmlns:vm="clr-namespace:notes_by_nodes_wpfApp.ViewModel"
        d:DataContext="{d:DesignInstance Type=local:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="100"/>
            <ColumnDefinition Width="2"/>
            <!-- Для GridSplitter -->
            <ColumnDefinition Width="2*" MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <!-- Левая панель -->
        <Border Grid.Column="0" Grid.Row="0" Background="White" >
            <StackPanel Orientation="Vertical">
                <TextBox Text="{Binding SelectedNode.Desc, UpdateSourceTrigger=LostFocus}"></TextBox>
                <TextBox Text="{Binding ElementName=NodeTreeView, Path=SelectedValue.Desc}"></TextBox>
                <TextBox Text="{Binding User, UpdateSourceTrigger=LostFocus}"></TextBox>
                <Button Content="Add Child" Command="{Binding AddChildCommand}" />
                <Button Content="Remove Node" Command="{Binding RemoveNodeCommand}"/>

                <TreeView ItemsSource="{Binding NodesTree}" 
                    Name="NodeTreeView" MinHeight="300"
                    SelectedItemChanged="NodeTreeView_SelectedItemChanged"                        
                    >
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type vm:INodeViewModel}" ItemsSource="{Binding ChildNodes}">
                            <StackPanel Orientation="Vertical" MinHeight="50">
                                <!--<Image Source="/Images/node.png" Width="16" Height="16" Margin="0,0,5,0"/>-->
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text="{Binding ChildNodes.Count, StringFormat=' ({0} children)'}" Foreground="Gray" Margin="5,0,0,0"/>
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>


                </TreeView>
            </StackPanel>

        </Border>

        <!-- Разделитель -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                  Background="DarkGray" ShowsPreview="False"/>

        <!-- Правая панель -->
        <Border Grid.Column="2" Background="LightBlue">
            <TextBlock Text="Правая панель" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
    </Grid>

</Window>
